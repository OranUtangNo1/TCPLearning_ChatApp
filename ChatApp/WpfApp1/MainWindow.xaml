<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- 接続コントロール -->
            <RowDefinition Height="*" />
            <!-- メッセージ一覧 -->
            <RowDefinition Height="Auto" />
            <!-- メッセージ送信欄 -->
        </Grid.RowDefinitions>

        <!-- 接続情報 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="接続先IP:" VerticalAlignment="Center" />
            <TextBox Width="120" Margin="5,0" />
            <TextBlock Text="ポート:" VerticalAlignment="Center" />
            <TextBox Width="60" Margin="5,0" />
            <Button Content="接続" Width="60" Margin="5,0" />
            <Button Content="切断" Width="60" Margin="5,0" />
            <TextBlock Text="ステータス: 切断中" Margin="10,0,0,0" />
        </StackPanel>

        <!-- メッセージ一覧 -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Messages}" />

        <!-- メッセージ入力と送信 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Width="400" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="送信" Width="60" Margin="10,0,0,0" Command="{Binding SendCommand}" />
        </StackPanel>
    </Grid>
</Window>
